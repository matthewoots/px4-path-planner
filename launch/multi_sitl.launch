<?xml version="1.0"?>
<launch>
    <!-- MAVROS posix SITL environment launch script -->
    <!-- launches Gazebo environment and 2x: MAVROS, PX4 SITL, and spawns vehicle -->
    <!-- vehicle model and world -->
    <arg name="est" default="ekf2"/>
    <arg name="vehicle" default="iris"/>
    <arg name="world" default="$(find mavlink_sitl_gazebo)/worlds/empty.world"/>
    <!-- gazebo configs -->
    <arg name="gui" default="false"/>
    <arg name="debug" default="false"/>
    <arg name="verbose" default="false"/>
    <arg name="paused" default="false"/>
    <arg name="gcs" default="udp://@127.0.0.1"/>
    <!-- Gazebo sim -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="gui" value="$(arg gui)"/>
        <arg name="world_name" value="$(arg world)"/>
        <arg name="debug" value="$(arg debug)"/>
        <arg name="verbose" value="$(arg verbose)"/>
        <arg name="paused" value="$(arg paused)"/>
    </include>
    <!-- UAV0 -->
    <group ns="S0">
        <!-- MAVROS and vehicle configs -->
        <arg name="ID" value="0"/>
        <arg name="fcu_url" default="udp://:14540@localhost:14580"/>
	<arg name="xid" value="/S0"/>
        <!-- PX4 SITL and vehicle spawn -->
        <include file="$(find px4)/launch/single_vehicle_spawn.launch">
            <arg name="x" value="0"/>
            <arg name="y" value="0"/>
            <arg name="z" value="0"/>
            <arg name="R" value="0"/>
            <arg name="P" value="0"/>
            <arg name="Y" value="0"/>
            <arg name="vehicle" value="$(arg vehicle)"/>
            <arg name="mavlink_udp_port" value="14560"/>
            <arg name="mavlink_tcp_port" value="4560"/>
            <arg name="ID" value="$(arg ID)"/>
            <!-- <arg name="gst_udp_port" value="$(eval 5600 + arg('ID'))"/> -->
            <!-- <arg name="video_uri" value="$(eval 5600 + arg('ID'))"/> -->
            <!-- <arg name="mavlink_cam_udp_port" value="$(eval 14530 + arg('ID'))"/> -->
        </include>
        <!-- MAVROS -->
        <include file="$(find mavros)/launch/px4.launch">
            <arg name="fcu_url" value="$(arg fcu_url)"/>
            <arg name="gcs_url" value="$(arg gcs)"/>
            <arg name="tgt_system" value="$(eval 1 + arg('ID'))"/>
            <arg name="tgt_component" value="1"/>
        </include>
	<!-- PATH PLANNER -->
	<node pkg="px4_path_planner" type="px4_path_planner_node" name="px4_path_planner0" output="screen">
		<rosparam command="load" file="$(find px4_path_planner)/params/common.yaml" />
		<param name="wp_file_location" value="$(find px4_path_planner)/path/wp0.csv"/>
		<remap from="/mavros/global_position/global" to="$(arg xid)/mavros/global_position/global"/>
		<remap from="/mavros/home_position/home" to="$(arg xid)/mavros/home_position/home"/>
		<remap from="/mavros/local_position/pose" to="$(arg xid)/mavros/local_position/pose"/>
		<remap from="/mavros/local_position/velocity_local" to="$(arg xid)/mavros/local_position/velocity_local"/>
		<remap from="/mavros/setpoint_position/local" to="$(arg xid)/mavros/setpoint_position/local"/>
		<remap from="/mavros/setpoint_raw/local" to="$(arg xid)/mavros/setpoint_raw/local"/>
		<remap from="/mavros/cmd/arming" to="$(arg xid)/mavros/cmd/arming"/>
		<remap from="/mavros/set_mode" to="$(arg xid)/mavros/set_mode"/>
		<remap from="/mavros/state" to="$(arg xid)/mavros/state"/>
		<remap from="/user" to="/cmd"/>
    	</node>
    </group>
    <!-- UAV1 -->
    <group ns="S1">
        <!-- MAVROS and vehicle configs -->
        <arg name="ID" value="1"/>
        <arg name="fcu_url" default="udp://:14541@localhost:14581"/>
	<arg name="xid" value="/S1"/>
        <!-- PX4 SITL and vehicle spawn -->
        <include file="$(find px4)/launch/single_vehicle_spawn.launch">
            <arg name="x" value="1"/>
            <arg name="y" value="0"/>
            <arg name="z" value="0"/>
            <arg name="R" value="0"/>
            <arg name="P" value="0"/>
            <arg name="Y" value="0"/>
            <arg name="vehicle" value="$(arg vehicle)"/>
            <arg name="mavlink_udp_port" value="14561"/>
            <arg name="mavlink_tcp_port" value="4561"/>
            <arg name="ID" value="$(arg ID)"/>
            <!-- <arg name="gst_udp_port" value="$(eval 5600 + arg('ID'))"/> -->
            <!-- <arg name="video_uri" value="$(eval 5600 + arg('ID'))"/> -->
            <!-- <arg name="mavlink_cam_udp_port" value="$(eval 14530 + arg('ID'))"/> -->
        </include>
        <!-- MAVROS -->
        <include file="$(find mavros)/launch/px4.launch">
            <arg name="fcu_url" value="$(arg fcu_url)"/>
            <arg name="gcs_url" value="$(arg gcs)"/>
            <arg name="tgt_system" value="$(eval 1 + arg('ID'))"/>
            <arg name="tgt_component" value="1"/>
        </include>
	<!-- PATH PLANNER -->
	<node pkg="px4_path_planner" type="px4_path_planner_node" name="px4_path_planner1" output="screen">
		<rosparam command="load" file="$(find px4_path_planner)/params/common.yaml" />
		<param name="wp_file_location" value="$(find px4_path_planner)/path/wp1.csv"/>
		<remap from="/mavros/global_position/global" to="$(arg xid)/mavros/global_position/global"/>
		<remap from="/mavros/home_position/home" to="$(arg xid)/mavros/home_position/home"/>
		<remap from="/mavros/local_position/pose" to="$(arg xid)/mavros/local_position/pose"/>
		<remap from="/mavros/local_position/velocity_local" to="$(arg xid)/mavros/local_position/velocity_local"/>
		<remap from="/mavros/setpoint_position/local" to="$(arg xid)/mavros/setpoint_position/local"/>
		<remap from="/mavros/setpoint_raw/local" to="$(arg xid)/mavros/setpoint_raw/local"/>
		<remap from="/mavros/cmd/arming" to="$(arg xid)/mavros/cmd/arming"/>
		<remap from="/mavros/set_mode" to="$(arg xid)/mavros/set_mode"/>
		<remap from="/mavros/state" to="$(arg xid)/mavros/state"/>
		<remap from="/user" to="/cmd"/>
    	</node>
    </group>
    <!-- UAV2 -->
    <group ns="S2">
        <!-- MAVROS and vehicle configs -->
        <arg name="ID" value="2"/>
        <arg name="fcu_url" default="udp://:14542@localhost:14582"/>
	<arg name="xid" value="/S2"/>
        <!-- PX4 SITL and vehicle spawn -->
        <include file="$(find px4)/launch/single_vehicle_spawn.launch">
            <arg name="x" value="0"/>
            <arg name="y" value="1"/>
            <arg name="z" value="0"/>
            <arg name="R" value="0"/>
            <arg name="P" value="0"/>
            <arg name="Y" value="0"/>
            <arg name="vehicle" value="$(arg vehicle)"/>
            <arg name="mavlink_udp_port" value="14562"/>
            <arg name="mavlink_tcp_port" value="4562"/>
            <arg name="ID" value="$(arg ID)"/>
            <!-- <arg name="gst_udp_port" value="$(eval 5600 + arg('ID'))"/> -->
            <!-- <arg name="video_uri" value="$(eval 5600 + arg('ID'))"/> -->
            <!-- <arg name="mavlink_cam_udp_port" value="$(eval 14530 + arg('ID'))"/> -->
        </include>
        <!-- MAVROS -->
        <include file="$(find mavros)/launch/px4.launch">
            <arg name="fcu_url" value="$(arg fcu_url)"/>
            <arg name="gcs_url" value="$(arg gcs)"/>
            <arg name="tgt_system" value="$(eval 1 + arg('ID'))"/>
            <arg name="tgt_component" value="1"/>
        </include>
	<!-- PATH PLANNER -->
	<node pkg="px4_path_planner" type="px4_path_planner_node" name="px4_path_planner2" output="screen">
		<rosparam command="load" file="$(find px4_path_planner)/params/common.yaml" />
		<param name="wp_file_location" value="$(find px4_path_planner)/path/wp2.csv"/>
		<remap from="/mavros/global_position/global" to="$(arg xid)/mavros/global_position/global"/>
		<remap from="/mavros/home_position/home" to="$(arg xid)/mavros/home_position/home"/>
		<remap from="/mavros/local_position/pose" to="$(arg xid)/mavros/local_position/pose"/>
		<remap from="/mavros/local_position/velocity_local" to="$(arg xid)/mavros/local_position/velocity_local"/>
		<remap from="/mavros/setpoint_position/local" to="$(arg xid)/mavros/setpoint_position/local"/>
		<remap from="/mavros/setpoint_raw/local" to="$(arg xid)/mavros/setpoint_raw/local"/>
		<remap from="/mavros/cmd/arming" to="$(arg xid)/mavros/cmd/arming"/>
		<remap from="/mavros/set_mode" to="$(arg xid)/mavros/set_mode"/>
		<remap from="/mavros/state" to="$(arg xid)/mavros/state"/>
		<remap from="/user" to="/cmd"/>
    	</node>
    </group>
</launch>
<!-- to add more UAVs (up to 10):
Increase the id
Change the name space
Set the FCU to default="udp://:14540+id@localhost:14550+id"
Set the malink_udp_port to 14560+id) -->
